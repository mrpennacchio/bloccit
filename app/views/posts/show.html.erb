<h1>
  <%= @post.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
  </small>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %> </p>
  </div>
  <% if user_is_authorized_for_post?(@post) %>
    <div class="col-md-4">
      <!-- use edit_topic_post_pathwhich takes two arguments, a topic, and a post -->
      <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
      <!-- update link_to to take an array consisting of a topic and postwhich it uses to build the link to delete a nested post -->
      <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
    </div>
  <% elsif user_is_post_moderator?(@post) %>
    <div class="col-md-4">
      <!-- use edit_topic_post_pathwhich takes two arguments, a topic, and a post -->
      <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
    </div>
  <%end%>
</div>
